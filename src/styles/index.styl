@import './element-ui.styl';
@import './mixin.styl';
body
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility
  font-family Helvetica Neue, Helvetica, PingFang SC, Hiragino Sans GB, Microsoft YaHei, Arial, sans-serif
  background-color #eff0f4
  color #324b69
  font-size 14px

::selection
  background #32aab7
  color #fff

html
  box-sizing border-box


*,*:before,*:after
  box-sizing inherit


a:focus,a:active
  outline none


a,a:focus,a:hover
  cursor pointer
  color inherit
  text-decoration none


.clearfix
  &:after
    visibility hidden
    display block
    font-size 0
    content " "
    clear both
    height 0

//vue router transition css
.fade-enter-active,.fade-leave-active
  transition all .2s ease


.fade-enter,.fade-leave-active
  opacity 0


//main-container全局样式
.app-main
  min-height 100%


.app-container
  padding: 30px


.svg-icon
  width 1em
  height 1em
  vertical-align -0.15em
  fill currentColor
  overflow hidden

li
  list-style none
ul
  margin 0
  padding 0
input
  outline none

#nprogress
  .bar
    background #40d6ba
    height 2px
  .spinner
    top 10px
    right 10px
  .spinner-icon
    border-top-color #40d6ba
    border-left-color #40d6ba
  .peg
    box-shadow 0 0 10px #34dcae, 0 0 5px #06ce97
